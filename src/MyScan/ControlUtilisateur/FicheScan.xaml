<UserControl x:Class="MyScan.ControlUtilisateur.FicheScan"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyScan.ControlUtilisateur"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="150">
    
    <Button x:Name="Button" Width="120" MinHeight="200" Height="auto" MaxHeight="220" Margin="0,20,20,20" Click="Button_Click" Style="{DynamicResource MahApps.Styles.Button.Hamburger}">
        <StackPanel>
            <Image x:Name="Image" Width="100" Height="150" Source="{Binding Cover}"/>
            <TextBlock x:Name="NomDuScan" Margin="0,5,0,0" Text="{Binding Nom}" HorizontalAlignment="Center" VerticalAlignment="Bottom" TextWrapping="Wrap"/>
        </StackPanel>
    </Button>
</UserControl>
